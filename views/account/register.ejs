<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
 
 <%- messages() %>

 <% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

 <div class="register">
    <form action="/account/register" method="post">
      <p class="inputFieldInfo">Field is required.</p>
      <div class="inputField">
        <label for="firstname">First name</label>
        <input type="text" name="account_firstname" id="firstname" required value="<%= locals.account_firstname %>">
      </div>
      <div class="inputField">
        <label for="lastname">Last name</label>
        <input type="text" name="account_lastname" id="lastname" required value="<%= locals.account_lastname %>">
      </div>
      <div class="inputField">
        <label for="email">Email</label>
        <input type="email" name="account_email" id="email" required value="<%= locals.account_email %>">
      </div>
      <div class="inputField">
        <label for="password">Password</label>
        <input type="password" name="account_password" id="password" required
          pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span class="inputFieldInfo">
          Passwords must be at least 12 characters, containing at least 1 capital letter,
          1 number, and 1 special character.
        </span>
      </div>
      <button type="submit">Register</button>
    </form>
  </div>